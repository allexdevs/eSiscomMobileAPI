            "type": "string",
            "required": true
          },
          "rg_ie": {
            "type": "string",
            "required": true
          },
          "rua": {
            "type": "string",
            "required": true
          },
          "bairro": {
            "type": "string",
            "required": true
          },
          "cidade": {
