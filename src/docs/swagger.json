{
  "openapi": "3.0.3",
  "basePath": "./src/docs",
  "info": {
    "title": "eSiscom Mobile API",
    "description": "API para integração com o aplicativo eSiscom Mobile",
    "version": "1.0.0"
  },
  "paths": {
    "/auth/login": {
      "get": {
        "description": "Essa rota é responsável pelo acesso dos usuários ao sistema",
        "tags": ["Autenticação"],
        "parameters": [
          {
            "name": "username",
            "in": "query",
            "allowEmptyValue": false,
            "requried": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "password",
            "in": "query",
            "allowEmptyValue": false,
            "requried": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Login realizado com sucesso"
          },
          "400": {
            "description": "Usuário ou senha incorretos"
          }
        }
      }
    },
    "/clients/findAll": {
      "get": {
        "description": "Essa rota tem como objetivo retornar todos os clientes cadastrados no banco de dados",
        "tags": ["Cadastro de Clientes"],
        "responses": {
          "200": {
            "description": ""
          },
          "400": {
            "description": "Nenhum cliente foi encontrado"
          }
        }
      }
    },
    "/clients/findById/{id}": {
      "get": {
        "description": "Essa rota tem como objetivo realizar uma busca para encontrar um cliente pelo seu id único no banco de dados",
        "tags": ["Cadastro de Clientes"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "allowEmptyValue": false,
            "required": true,
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Cliente localizado com sucesso"
          },
          "400": {
            "description": "Nenhum cliente com o id fornecido foi encontrado"
          }
        }
      }
    },
    "/clients/findByName/{name}": {
      "get": {
        "description": "Essa rota tem como objetivo localizar um cliente pelo seu nome ou por parte dele",
        "tags": ["Cadastro de Clientes"],
        "parameters": [
          {
            "name": "name",
            "in": "path",
            "allowEmptyValue": false,
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Cliente localizado com sucesso"
          },
          "404": {
            "description": "Nenhum cliente com esse nome foi encontrado"
          }
        }
      }
    },
    "/clients/add": {
      "post": {
        "description": "Essa rota tem como objetivo cadastrar um novo cliente",
        "tags": ["Cadastro de Clientes"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Client"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Cliente salvo com sucesso"
          },
          "400": {
            "description": "A requisição possui campos em branco"
          },
          "409": {
            "description": "O id do usuário cadastrado já existe"
          }
        }
      }
    },
    "/clients/update/{id}": {
      "put": {
        "description": "Essa rota tem como objetivo atualizar os dados do cliente pelo seu id",
        "tags": ["Cadastro de Clientes"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "allowEmptyValue": false,
            "required": true,
            "schema": {
              "type": "number"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddClient"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Cliente atualizado com sucesso"
          }
        }
      }
    },
    "/clients/delete/{id}": {
      "delete": {
        "description": "Essa rota tem como objetivo excluir um cliente pelo seu id",
        "tags": ["Cadastro de Clientes"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "allowEmptyValue": false,
            "required": true,
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Cliente excluído com sucesso"
          }
        }
      }
    },
    "/settings/config": {
      "post": {
        "description": "Essa rota é responsável por realizar a configuração inicial da API",
        "tags": ["Configuração"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Settings"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Configuração bem sucedida"
          },
          "400": {
            "description": "Não foi possível realizar a configuração"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Client": {
        "type": "object",
        "properties": {
          "nome": {
            "type": "string",
            "required": true
          },
          "fantasia": {
            "type": "string",
            "required": true
          },
          "cpf_cnpj": {
            "type": "string",
            "required": true
          },
          "rg_ie": {
            "type": "string",
            "required": true
          },
          "rua": {
            "type": "string",
            "required": true
          },
          "bairro": {
            "type": "string",
            "required": true
          },
          "cidade": {
            "type": "string",
            "required": true
          },
          "estado": {
            "type": "string",
            "required": true
          },
          "cep": {
            "type": "string",
            "required": true
          },
          "complemento": {
            "type": "string",
            "required": false
          },
          "numero": {
            "type": "number",
            "required": true
          },
          "obs": {
            "type": "string",
            "required": false
          },
          "email": {
            "type": "string",
            "requried": false
          },
          "telefone": {
            "type": "string",
            "required": true
          },
          "status": {
            "type": "string",
            "required": false
          },
          "vlr_total_vendas": {
            "type": "number",
            "required": false
          }
        }
      },
      "Settings": {
        "type": "object",
        "properties": {
          "host": {
            "type": "string",
            "required": true
          },
          "database": {
            "type": "string",
            "required": true
          },
          "username": {
            "type": "string",
            "required": true
          },
          "password": {
            "type": "string",
            "required": true
          },
          "port": {
            "type": "number",
            "required": true
          }
        }
      }
    }
  }
}
